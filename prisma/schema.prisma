generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Profile {
  id    String @id @default(uuid())
  name  String
  words Word[]

  @@map("profiles")
}

model Word {
  id           String @id @default(dbgenerated("gen_random_uuid()"))
  name         String
  mean         String
  typeofspeech String
  profileId    String
  profile      Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
  @@map("words")
}
